<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/MainMenuLinear"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="2sp"
    android:background="@color/contour">

    <RelativeLayout
        android:id="@+id/SubjectSelectionGridRelativeLayout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:id="@+id/UserSelectionTextInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="@string/SubjectSelectionIntructionText"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp" />
        <GridView
            android:id="@+id/GridViewSubjectSelection"
            android:layout_below="@id/UserSelectionTextInstruction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:columnWidth="100dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="24dp"
            android:horizontalSpacing="10dp"
            android:stretchMode="spacingWidthUniform">
        </GridView>
    </RelativeLayout>

</RelativeLayout>